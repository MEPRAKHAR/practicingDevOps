pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Check out the source code from your repository
                checkout scm
            }
        }
        stage('Build') {
            steps {
                // Build the Go application
                sh 'go build -o app main.go'
            }
        }
        stage('Test') {
            steps {
                // Run tests
                sh 'go test -v ./...'
            }
        }
        stage('Docker Build') {
            steps {
                // Build a Docker image (adjust image name/tag as needed)
                script {
                    def dockerImage = docker.build("myapp:${env.BUILD_ID}")
                }
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploy step goes here (e.g., push image to a registry, deploy to a server, etc.)"
            }
        }
    }
    
    post {
        success {
            echo "Build completed successfully!"
        }
        failure {
            echo "Build failed."
        }
    }
}
